{% extends "layout.njk" %}

{% block content %}

  {% block header %}
    <title>Desafio3.1 - Primeiro Servidor</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  {% endblock %}

  <header>
    <div class="wrapper-container">
      <div class="wrapper-box">
        <a href="/LaunchBase/Iniciando-no-front-end/desafio2-3/desafio2-2.html">
          <img src="https://skylab.rocketseat.com.br/static/0ae02df14343f202953af82f30a1581b.svg" alt="rocketseat">
        </a>
      </div>
      <div class="links">
        {% for link in course.links %}
          <a href="{{link.url}}">{{link.name}}</a>
        {% endfor %}
      </div>
    </div>
  </header>
  <div id="wrapper-upper">
    <h1>{{msg_wrapper}}</h1>
  </div>
  <section class="cards-courses">
    {% for link in card_courses.links %}
      <div class="card-course" id="starter">
        <div class="card__img-container-course">
          <img src="{{link.image}}" alt="{{link.name}}">
        </div>
        <div class="content-course">
          <p>{{link.description}}</p>
        </div>
        <div class="card__info">
          <p>{{link.class}}</p>
          <p class="card_price">{{link.price}}</p>
        </div>
      </div>
    {% endfor %}
  </section>
  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <a class="max-modal">
        <i class="material-icons">maximize</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

</div>
</div>

<script src="/scripts.js"></script>
{%endblock%}